<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="@color/color_danger" />
            <stroke android:width="1dp" android:color="#f05050" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="@color/color_danger_active" />
            <stroke android:width="1dp" android:color="#ed2a2a" />
        </shape>
    </item>

</selector>