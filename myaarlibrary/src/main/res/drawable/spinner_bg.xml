<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="1dp" android:color="#504a4b" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:layout_marginRight="5dp" android:gravity="right" android:src="@drawable/drop_arrow_12" />
            </item>
        </layer-list>
    </item>

    <!-- state pressed-->
    <item android:state_enabled="true" android:state_pressed="true" android:state_window_focused="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#4c7c7c7c" android:startColor="#4c7c7c7c" android:type="linear" />

                    <stroke android:width="1dp" android:color="#0099CC" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:layout_marginRight="5dp" android:gravity="right" android:src="@drawable/drop_arrow_12" />
            </item>
        </layer-list>
    </item>

    <!-- unselected state -->

    <item android:state_enabled="true" android:state_window_focused="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="1dp" android:color="#504a4b" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:layout_marginRight="5dp" android:gravity="right" android:src="@drawable/drop_arrow_12" />
            </item>
        </layer-list>
    </item>
</selector>